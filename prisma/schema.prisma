generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Expense {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  amount    BigInt
  date      String
  category      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("expenses")
}

model Category {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  associatesNames String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("categories")
}

model Keywords {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  updatedAt DateTime @updatedAt

  @@map("keywords")
}
